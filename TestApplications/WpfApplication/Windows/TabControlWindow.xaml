<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Window"
        Width="300"
        Height="300"
        mc:Ignorable="d">
    <TabControl>
        <TabItem x:Name="Xname" Header="x:Name">
            <TextBlock Text="1" />
        </TabItem>
        <TabItem x:Name="Header" Header="Header">
            <TextBlock Text="2" />
        </TabItem>
        <TabItem AutomationProperties.AutomationId="AutomationId" Header="AutomationProperties.AutomationId">
            <TextBlock Text="3" />
        </TabItem>
    </TabControl>
</Window>
