<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:windows="clr-namespace:WpfApplication.Windows"
        Title="Window"
        Width="300"
        Height="300"
        mc:Ignorable="d">
    <Window.DataContext>
        <windows:DataGridWindowViewModel />
    </Window.DataContext>
    <DataGrid x:Name="DataGrid"
              AlternationCount="{Binding Items.Count}"
              AutoGenerateColumns="False"
              ItemsSource="{Binding Items}">
        <DataGrid.RowHeaderStyle>
            <Style TargetType="{x:Type DataGridRowHeader}">
                <Setter Property="Content" Value="{Binding Path=(ItemsControl.AlternationIndex), RelativeSource={RelativeSource AncestorType=DataGridRow}}" />
                <Setter Property="ContentStringFormat" Value="Row {0}" />
            </Style>
        </DataGrid.RowHeaderStyle>
        <DataGrid.Columns>
            <DataGridTextColumn Binding="{Binding Id}" Header="Id" />
            <DataGridTextColumn Binding="{Binding Name}" Header="Name" />
        </DataGrid.Columns>
    </DataGrid>
</Window>