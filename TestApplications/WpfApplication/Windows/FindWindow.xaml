<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Window"
        Width="300"
        Height="300"
        mc:Ignorable="d">
    <StackPanel>
        <CheckBox x:Name="CheckBox1Name"
                  AutomationProperties.AutomationId="CheckBox1AutomationId"
                  Content="CheckBox1Content" />

        <TextBlock Text="TextBlock1" />
        <TextBlock Text="TextBlock2" />

        <Label Content="Label1" />
        <Label Content="Label2" />

        <TextBox Text="TextBox1" />
        <TextBox Text="TextBox2" />
    </StackPanel>
</Window>
