<Window x:Class="WpfApplication.Windows.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:WpfApplication.Windows"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="DialogWindow"
        Width="300"
        Height="300"
        mc:Ignorable="d">
    <StackPanel>
        <Button Click="OnShowMessageBoxClick" Content="Show MessageBox" />
        <Button Click="OnShowDialogClick" Content="Show Dialog" />
    </StackPanel>
</Window>
