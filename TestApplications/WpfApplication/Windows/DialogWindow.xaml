<Window x:Class="WpfApplication.Windows.DialogWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="DialogWindow"
        Width="300"
        Height="300"
        mc:Ignorable="d">
  <StackPanel>
    <Button Click="OnShowMessageBoxOKCancelClick" Content="Show MessageBox OKCancel" />
    <Button Click="OnShowMessageBoxYesNoCancelClick" Content="Show MessageBox YesNoCancel" />
    <Button Click="OnOpenFileDialog" Content="Show OpenFileDialog" />
    <Button Click="OnSaveFileDialog" Content="Show SaveFileDialog" />
    <Button Click="OnShowDialogClick" Content="Show Dialog" />
  </StackPanel>
</Window>
