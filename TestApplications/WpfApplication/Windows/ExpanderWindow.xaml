<Window x:Class="WpfApplication.Windows.ExpanderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        Title="Window"
        Width="300"
        Height="300"
        mc:Ignorable="d">
    <StackPanel>
        <Expander AutomationProperties.AutomationId="AutomationId"
                  Header="1"
                  IsEnabled="{Binding ElementName=IsEnabled,
                                      Path=IsChecked}"
                  IsExpanded="True">
            <TextBlock Text="1" />
        </Expander>

        <Expander x:Name="XName"
                  Header="2"
                  IsEnabled="{Binding ElementName=IsEnabled,
                                      Path=IsChecked}"
                  IsExpanded="True">
            <TextBlock Text="2" />
        </Expander>

        <Expander Header="Header"
                  IsEnabled="{Binding ElementName=IsEnabled,
                                      Path=IsChecked}"
                  IsExpanded="True">
            <TextBlock Text="2" />
        </Expander>

        <CheckBox x:Name="IsEnabled"
                  Content="IsEnabled"
                  IsChecked="True" />
    </StackPanel>
</Window>
